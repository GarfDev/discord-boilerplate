{
  "compilerOptions": {
    "allowJs": false,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "CommonJS",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noEmit": false,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./src"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "jest.config.js"
  ]
}
